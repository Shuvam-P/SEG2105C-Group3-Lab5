<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <!-- A vertical container to hold everything -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Avatar Image -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/flag_00"
            android:onClick="onSetAvatarButton"
            android:layout_gravity="center"
            android:layout_marginTop="40dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Profile"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <!-- Team Name Label -->
        <TextView
            android:id="@+id/txtTeamNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Name:"
            android:textSize="18sp"
            android:layout_marginTop="30dp" />

        <!-- Team Name Input -->
        <EditText
            android:id="@+id/editTeamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter team name"
            android:layout_marginTop="10dp" />

        <!-- Postal Label -->
        <TextView
            android:id="@+id/txtPostalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postal Code:"
            android:textSize="18sp"
            android:layout_marginTop="30dp" />

        <!-- Postal Input -->
        <EditText
            android:id="@+id/editPostal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter postal code"
            android:inputType="text"
            android:layout_marginTop="10dp" />

        <!-- Date Formed Label -->
        <TextView
            android:id="@+id/txtDateFormedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Formed:"
            android:textSize="18sp"
            android:layout_marginTop="30dp" />

        <!-- Date Formed Input -->
        <EditText
            android:id="@+id/editDateFormed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YYYY-MM-DD"
            android:inputType="date"
            android:layout_marginTop="10dp" />

        <!-- Captain Phone Label -->
        <TextView
            android:id="@+id/txtPhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Captain Phone:"
            android:textSize="18sp"
            android:layout_marginTop="30dp" />

        <!-- Captain Phone Input -->
        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:inputType="phone"
            android:layout_marginTop="10dp" />

        <!-- Captain Email Label -->
        <TextView
            android:id="@+id/txtEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Captain Email:"
            android:textSize="18sp"
            android:layout_marginTop="30dp" />

        <!-- Captain Email Input -->
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email address"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp" />

        <!-- Maps Button -->
        <Button
            android:id="@+id/btnMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open in Google Maps"
            android:onClick="onOpenInGoogleMaps"
            android:layout_gravity="center"
            android:layout_marginTop="40dp" />

    </LinearLayout>

</ScrollView>
